{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "g++",
      "args": ["main.cpp", "-o", "a.exe", "-g"],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "detail": "Builds with debug symbols"
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "g++",
      "args": ["main.cpp", "-o", "a.exe", "-O2", "-DNDEBUG"],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "detail": "Optimized build for release"
    }
  ]
}
